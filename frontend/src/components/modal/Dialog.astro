---
import Button from "@components/modal/Button.astro";
---

<Button />

<dialog
    :class="showModal ? 'modal-open' : ''"
    class="modal modal-bottom sm:modal-middle transition-all"
>
    <div class="modal-box bg-base-100 rounded-[2.5rem] p-8">
        <h3 class="font-black text-3xl mb-6">New List</h3>

        <div class="form-control w-full space-y-6">
            <div>
                <span
                    class="label-text font-black text-[10px] uppercase tracking-widest opacity-40 ml-1"
                    >List Name</span
                >
                <input
                    type="text"
                    x-model="newList.name"
                    placeholder="E.g. Groceries"
                    class="input input-bordered w-full h-14 rounded-2xl bg-base-200 border-none focus:ring-2 focus:ring-primary/20"
                />
            </div>

            <div>
                <span
                    class="label-text font-black text-[10px] uppercase tracking-widest opacity-40 ml-1"
                    >Icon</span
                >
                <div class="grid grid-cols-4 gap-3 mt-2">
                    <template x-for="icon in availableIcons">
                        <button
                            @click="newList.icon = icon"
                            :class="newList.icon === icon ? 'btn-primary' : 'bg-base-200'"
                            class="btn btn-square h-14 w-full rounded-2xl no-animation"
                        >
                            <i class="fas" :class="icon"></i>
                        </button>
                    </template>
                </div>
            </div>
        </div>

        <div class="modal-action gap-3 mt-10">
            <button
                @click="showModal = false"
                class="btn btn-ghost flex-1 h-14 rounded-2xl font-bold"
                >Cancel</button
            >
            <button
                @click="createList()"
                class="btn btn-primary flex-1 h-14 rounded-2xl font-bold shadow-lg shadow-primary/20"
                >Create</button
            >
        </div>
    </div>
</dialog>
