<main class="flex-1 overflow-y-auto bg-base-200">
    <div class="max-w-4xl mx-auto w-full px-10">
        <div class="py-8 flex items-center justify-between">
            <div
                class="text-xs font-bold opacity-40 uppercase tracking-widest flex items-center gap-2"
            >
                <i class="fas fa-home"></i>
                <span>/</span>
                <span
                    class="text-base-content opacity-100"
                    x-text="lists[currentListIndex].name"></span>
            </div>
